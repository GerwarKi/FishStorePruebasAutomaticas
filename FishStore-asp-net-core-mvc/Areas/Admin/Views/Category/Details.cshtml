@model FishStore.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center" style="padding-top:90px">Detalhes da Categoria</h1>
<br />

<div class="jumbotron">
    <div class="container">
        <div class="border p-4 rounded bg-white">
            <div class="form-group row">
                <div class="col-3 font-weight-bold">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-5 offset-3">
                    <partial name="_DetailsAndBackToListButton" model="Model.Id" />
                </div>
            </div>
        </div>
    </div>
</div>



