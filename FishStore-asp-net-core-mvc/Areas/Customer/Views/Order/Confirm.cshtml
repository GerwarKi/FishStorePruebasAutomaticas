@model FishStore.Models.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="padding-top:60px"></h1>
<div class="jumbotron">
    <div class="bg-white border rounded p-4">
        <div class="row px-3">
            <div class="col-8">
                <h2 class="text-info">Pedido Confirmado</h2>
            </div>
            <div class="col-4 text-right">
                <a asp-action="Products" asp-controller="Home" class="btn btn-success form-control">Novo Pedido</a> 
            </div>
        </div>

        @if(Model.OrderHeader != null)
        {
            <div style="color: maroon" class="p-3">
                Seu pedido foi confirmado! Por favor veja o sumário abaixo.
            </div>
            <partial name="_IndividualOrderDetails" model="Model" />
        }
        else
        {
            <div class="text-danger">ERRO: Pedido não encontrado, tente novamente</div>
        }

    </div>
</div>

